<nav aria-label="breadcrumb">
  <ol class="breadcrumb bg-white pl-0 pb-1 mb-0">
    <li class="breadcrumb-item"><a href="#">首頁</a></li>
    <li class="breadcrumb-item" aria-current="page"><a href="">徵才資訊</a></li>
  </ol>
</nav>
<div class="job_list">
<% @jobs.each do |job| %>
<div class="row text-left">
    <%= link_to job.title, job, class: "col-lg-10 col-12"%>
    <div class="col-lg-2 col-12">[<%= job.publish_date %>]</div>
</div>
<div class="d-flex w-100 text-left">
<%= simple_format(truncate(job.content, length: 200)) %>
</div>
<% end %>
</div>

<br>
<%= paginate @jobs, theme: 'twitter-bootstrap-4' %>
<%= link_to 'New Job', new_job_path, class: "btn btn-primary" %>
